{% extends 'base.html.twig' %}

{% block title %} - Rejestracja{% endblock %}

{% block body %}

<div class="container">
<h2>Rejestracja</h2>
{{ form_start(registrationForm, { 'attr': {'class': 'form-horizontal'} }) }}

    {% for error in registrationForm.username.vars.errors %}
    <div class="alert alert-danger" role="alert">
      {{ error.message}}
    </div>
    {% endfor %}

    {% for error in registrationForm.email.vars.errors %}
    <div class="alert alert-danger" role="alert">
      {{ error.message}}
    </div>
    {% endfor %}

    <div class="form-group">
      <label class="control-label col-sm-2" for="{{ registrationForm.username.vars.full_name }}">Login:</label>
      <div class="col-sm-10">
          {{ form_widget(registrationForm.username) }}
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="{{ registrationForm.displayname.vars.full_name }}">Wyświetlana nazwa:</label>
      <div class="col-sm-10">
          {{ form_widget(registrationForm.displayname) }}
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="{{ registrationForm.email.vars.full_name }}">Email:</label>
      <div class="col-sm-10">
          {{ form_widget(registrationForm.email) }}
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="{{ registrationForm.plainPassword.vars.full_name }}">Hasło:</label>
      <div class="col-sm-10">
          {{ form_widget(registrationForm.plainPassword) }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Zarejestruj</button>
      </div>
    </div>
{{ form_end(registrationForm) }}
</div>

{% endblock %}
